<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>


    <RelativeLayout
        android:id="@+id/include_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/include_comment_content"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:background="@color/back_ground"
            android:gravity="center"
            android:text="24条评论"
            android:textColor="@color/mine_line_1"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/include_comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_comment_content"
            android:background="@color/share_primary_1a1a1a" android:layout_above="@id/include_comment_edit"/>

        <EditText
            android:id="@+id/include_comment_edit"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:background="@color/bottom_bar_bg"
            android:ems="10"
            android:hint="评论"
            android:inputType="textPersonName"
            android:padding="17dp"
            android:paddingRight="34dp"
            android:textColor="@color/mine_line_1"
            android:textColorHint="@color/mine_line_1"
            android:textSize="13sp" />

        <TextView android:gravity="center_vertical"
            android:id="@+id/include_comment_ant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/include_comment_edit"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/include_comment_edit"
            android:text="\@"
            android:layout_marginEnd="15dp"
            android:textColor="@color/mine_line_1"
            android:textSize="23sp" />
    </RelativeLayout>
</layout>
