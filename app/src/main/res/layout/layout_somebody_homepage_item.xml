<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/somebody_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:gravity="left"
            android:text="吕中中上是上是虽中蝇是是虽中蝇是虽中蝇蝇是虽中jk"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/somebody_backimg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/fragemnt_item_suolv"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/somebody_des" />

        <ImageView
            android:id="@+id/somebody_play_btn"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_plyer"
            app:layout_constraintBottom_toBottomOf="@+id/somebody_backimg"
            app:layout_constraintEnd_toEndOf="@+id/somebody_backimg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/somebody_backimg" />

        <ImageView
            android:id="@+id/somebody_img_share"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/somebody_backimg"
            app:layout_constraintVertical_bias="0.00999999" />

        <TextView
            android:id="@+id/somebody_text_share_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="12"
            android:textColor="@color/bottom_text_color"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/somebody_img_share"
            app:layout_constraintTop_toBottomOf="@+id/somebody_backimg" />

        <ImageView
            android:id="@+id/somebody_img_dianzan"
            android:layout_width="12dp"
            android:layout_height="11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_dianzan"
            app:layout_constraintEnd_toStartOf="@+id/somebody_text_dianzan_count"
            app:layout_constraintTop_toBottomOf="@+id/somebody_backimg" />

        <TextView
            android:id="@+id/somebody_text_dianzan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="12dp"
            android:text="34"
            android:textColor="@color/bottom_text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/somebody_backimg" />

        <TextView
            android:id="@+id/somebody_text_comment_count"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="96dp"
            android:layout_marginTop="8dp"
            android:text="12"
            android:textColor="@color/bottom_text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/somebody_img_dianzan"
            app:layout_constraintTop_toBottomOf="@+id/somebody_backimg" />

        <ImageView
            android:id="@+id/somebody_img_comment"
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_comment"
            app:layout_constraintEnd_toStartOf="@+id/somebody_text_comment_count"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toEndOf="@+id/somebody_text_share_count"
            app:layout_constraintTop_toBottomOf="@+id/somebody_backimg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="11dp"
            android:background="@color/home_separate"
            app:layout_constraintTop_toBottomOf="@+id/somebody_img_comment" />
    </android.support.constraint.ConstraintLayout>
</layout>
